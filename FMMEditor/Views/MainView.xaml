<ma:MetroWindow
    x:Class="FMMEditor.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:FMMEditor.Controls"
    xmlns:converter="clr-namespace:FMMEditor.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FMMEditor"
    xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mg="https://github.com/fantasticfiasco/mvvm-dialogs"
    Width="1280"
    Height="600"
    mg:DialogServiceViews.IsRegistered="True"
    BorderThickness="1"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
    FontFamily="{StaticResource MaterialDesignFont}"
    GlowBrush="{DynamicResource AccentColorBrush}"
    Style="{StaticResource MaterialDesignWindow}"
    TitleBarHeight="20"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.LayoutTransform>
        <ScaleTransform CenterX=".5" CenterY=".5" ScaleX=".92" ScaleY=".92" />
    </Window.LayoutTransform>

    <DockPanel>

        <!--  Top Bar  -->
        <md:ColorZone
            Height="56"
            DockPanel.Dock="Top"
            Mode="PrimaryMid">
            <Grid>
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="FMM 26 DB Editor" />

                <StackPanel
                    Margin="0,0,16,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <md:PopupBox
                        Margin="4"
                        Padding="0"
                        PlacementMode="BottomAndAlignRightEdges"
                        StaysOpen="False">
                        <md:PopupBox.ToggleContent>
                            <md:PackIcon
                                Width="21"
                                Height="21"
                                Kind="DotsVertical" />
                        </md:PopupBox.ToggleContent>

                        <StackPanel>
                            <Button Click="Exit_Click" FontSize="16">
                                <TextBlock Text="Exit" />
                            </Button>
                        </StackPanel>
                    </md:PopupBox>
                </StackPanel>
            </Grid>
        </md:ColorZone>

        <!--  Main Content  -->
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock
                    Margin="0,0,0,16"
                    FontSize="32"
                    FontWeight="Bold"
                    Text="FMM 26 DB Editor"
                    TextAlignment="Center" />

                <TextBlock
                    Margin="0,0,0,48"
                    FontSize="16"
                    Text="Choose an editor to get started"
                    TextAlignment="Center" />

                <Grid MaxWidth="1200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="220" />
                    </Grid.ColumnDefinitions>

                    <!--  Competitions Editor Card  -->
                    <md:Card
                        Grid.Column="0"
                        md:ElevationAssist.Elevation="Dp4"
                        Cursor="Hand"
                        MouseLeftButtonUp="OpenCompetitions_Click"
                        UniformCornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Padding="24,32"
                                CornerRadius="8,8,0,0">
                                <md:PackIcon
                                    Width="64"
                                    Height="64"
                                    HorizontalAlignment="Center"
                                    Kind="Trophy" />
                            </Border>

                            <StackPanel
                                Grid.Row="1"
                                Margin="24"
                                VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Text="Competitions"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Margin="0,8,0,16"
                                    FontSize="14"
                                    Text="Edit competitions and league structures"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <Button
                                    Width="120"
                                    HorizontalAlignment="Center"
                                    Click="OpenCompetitions_Click"
                                    Content="OPEN"
                                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                            </StackPanel>
                        </Grid>
                    </md:Card>

                    <!--  Clubs Editor Card  -->
                    <md:Card
                        Grid.Column="2"
                        md:ElevationAssist.Elevation="Dp4"
                        Cursor="Hand"
                        MouseLeftButtonUp="OpenClubs_Click"
                        UniformCornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Padding="24,32"
                                CornerRadius="8,8,0,0">
                                <md:PackIcon
                                    Width="64"
                                    Height="64"
                                    HorizontalAlignment="Center"
                                    Kind="Shield" />
                            </Border>

                            <StackPanel
                                Grid.Row="1"
                                Margin="24"
                                VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Text="Clubs"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Margin="0,8,0,16"
                                    FontSize="14"
                                    Text="Edit clubs and team information"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <Button
                                    Width="120"
                                    HorizontalAlignment="Center"
                                    Click="OpenClubs_Click"
                                    Content="OPEN"
                                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                            </StackPanel>
                        </Grid>
                    </md:Card>

                    <!--  Names Editor Card  -->
                    <md:Card
                        Grid.Column="4"
                        md:ElevationAssist.Elevation="Dp4"
                        Cursor="Hand"
                        MouseLeftButtonUp="OpenNames_Click"
                        UniformCornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Padding="24,32"
                                CornerRadius="8,8,0,0">
                                <md:PackIcon
                                    Width="64"
                                    Height="64"
                                    HorizontalAlignment="Center"
                                    Kind="TextBox" />
                            </Border>

                            <StackPanel
                                Grid.Row="1"
                                Margin="24"
                                VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Text="Names"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Margin="0,8,0,16"
                                    FontSize="14"
                                    Text="Edit player names and name databases"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <Button
                                    Width="120"
                                    HorizontalAlignment="Center"
                                    Click="OpenNames_Click"
                                    Content="OPEN"
                                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                            </StackPanel>
                        </Grid>
                    </md:Card>

                    <!--  People Editor Card  -->
                    <md:Card
                        Grid.Column="6"
                        md:ElevationAssist.Elevation="Dp4"
                        Cursor="Hand"
                        MouseLeftButtonUp="OpenPeople_Click"
                        UniformCornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Padding="24,32"
                                CornerRadius="8,8,0,0">
                                <md:PackIcon
                                    Width="64"
                                    Height="64"
                                    HorizontalAlignment="Center"
                                    Kind="AccountGroup" />
                            </Border>

                            <StackPanel
                                Grid.Row="1"
                                Margin="24"
                                VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Text="People"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Margin="0,8,0,16"
                                    FontSize="14"
                                    Text="Edit players, staff and their attributes"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <Button
                                    Width="120"
                                    HorizontalAlignment="Center"
                                    Click="OpenPeople_Click"
                                    Content="OPEN"
                                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                            </StackPanel>
                        </Grid>
                    </md:Card>
                </Grid>

                <TextBlock
                    Margin="0,48,0,0"
                    FontSize="12"
                    Text="Version 2.26.0"
                    TextAlignment="Center" />
            </StackPanel>
        </Grid>

    </DockPanel>
</ma:MetroWindow>
