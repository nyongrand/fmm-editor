<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FMEditor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FMEditor.Views"
    xmlns:vm="clr-namespace:FMEditor.ViewModels"
    x:DataType="vm:MainViewModel"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Load">
        <ShellContent
            Title="One"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="OnePage" />
    </FlyoutItem>

    <FlyoutItem Title="Nation">
        <ShellContent
            Title="Nation"
            ContentTemplate="{DataTemplate views:NationsPage}"
            Route="NationPage" />
    </FlyoutItem>

    <FlyoutItem Title="Competition" IsEnabled="{Binding EnableCompetition}">
        <ShellContent
            Title="Competition"
            ContentTemplate="{DataTemplate views:CompetitionsPage}"
            Route="CompetitionPage" />
    </FlyoutItem>

    <FlyoutItem Title="Club" IsEnabled="{Binding EnableClub}">
        <ShellContent
            Title="Club"
            ContentTemplate="{DataTemplate views:ClubsPage}"
            Route="ClubPage" />
    </FlyoutItem>

</Shell>
