<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:FMM.ViewModels"
			 x:Class="FMM.Views.MainView"
			 x:DataType="vm:MainViewModel"
			 xmlns:ui="using:FluentAvalonia.UI.Controls"
			 mc:Ignorable="d"
			 d:DesignWidth="1280"
			 d:DesignHeight="720">
	<Design.DataContext>
		<vm:MainViewModel />
	</Design.DataContext>

	<Grid ColumnDefinitions="*">

		<ui:NavigationView Grid.Row="0"
						   Name="navigateView"
						   IsPaneToggleButtonVisible="True"
						   IsSettingsVisible="False"
						   PaneDisplayMode="LeftMinimal"
						   SelectedItem="{Binding SelectedNavigationItem, Mode=TwoWay}"
						   Content="{Binding CurrentViewModel}">

			<ui:NavigationView.MenuItemTemplate>
				<DataTemplate x:DataType="vm:NavigationItem">
					<ui:NavigationViewItem Content="{Binding Label}" Tag="{Binding Target}" />
				</DataTemplate>
			</ui:NavigationView.MenuItemTemplate>

			<ui:NavigationView.MenuItemsSource>
				<Binding Path="NavigationItems" />
			</ui:NavigationView.MenuItemsSource>
		</ui:NavigationView>
	</Grid>
</UserControl>
